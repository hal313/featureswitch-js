{
  "name": "featureswitch-js",
  "version": "1.0.0",
  "description": "TypeScript library which implements feature switches",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "bundle": "webpack",
    "prepublish": "rimraf ./lib && tsc -d",
    "test": "mocha test/**.ts --require ts-node/register",
    "test:watch": "mocha test/**.ts --require ts-node/register --reporter min --watch --watch-extensions ts",
    "coverage": "nyc mocha test/**.ts --require ts-node/register --require source-map-support/register"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "lib/**/*"
    ],
    "reporter": "html",
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hal313/featureswitch-js.git"
  },
  "keywords": [
    "typescript",
    "library",
    "module",
    "authoring"
  ],
  "author": "John Ghidiu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hal313/featureswitch-js/issues"
  },
  "homepage": "https://github.com/hal313/featureswitch-js#readme",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/lodash": "^4.14.104",
    "@types/mocha": "^2.2.48",
    "awesome-typescript-loader": "^3.1.2",
    "chai": "^3.5.0",
    "karma": "^1.5.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.0.1",
    "karma-typescript-preprocessor": "^0.3.1",
    "karma-webpack": "^2.0.3",
    "lodash": "^4.17.5",
    "mocha": "^5.0.4",
    "rimraf": "^2.5.2",
    "source-map-support": "^0.5.4",
    "ts-node": "^5.0",
    "typescript": "^2.1.0",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  }
}
